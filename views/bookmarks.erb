<html>
<body>
<div class="bookmarks">
<ul>
  <% @bookmark.each do |bookmark| %>
    <li>
      <a href="<%= bookmark.url %>">
        <%= bookmark.title %>
      </a>
      <form class="delete" method="post" action="/bookmarks/<%= bookmark.id %>">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Delete">
      </form>
    </li>
  <% end %>
</ul>

<form action="/add" method="POST">
  <label for="add_url">Add Bookmark:
    <input name="add_url" type="text" placeholder="url" required>
  </label>
  <label for="add_title">Add Title:
    <input name="add_title" type="text" placeholder="title" required>
  </label>
  <input type="submit" value="Submit">
</form>
</div>
</body>
</html>